<h1>Listing schedules</h1>

<table>
  <tr>
    <th>Date</th>
    <th>Start hour</th>
    <th>End hour</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @schedules.each do |schedule| %>
  <tr>
    <td><%= schedule.date %></td>
    <td><%= schedule.start_hour %></td>
    <td><%= schedule.end_hour %></td>
    <td><%= link_to 'Show', schedule_plan_schedule_path(schedule.schedule_plan,schedule) %></td>
    <td><%= link_to 'Edit', edit_schedule_plan_schedule_path(schedule.schedule_plan, schedule) %></td>
    <td><%= link_to 'Destroy', schedule_plan_schedule_path(schedule.schedule_plan,schedule), confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

